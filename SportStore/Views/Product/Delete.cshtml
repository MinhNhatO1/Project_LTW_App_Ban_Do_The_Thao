@model SportStore.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div style="margin: 10px auto; width: 70%;">
    <h3 style="text-align:center">BẠN CÓ CHẮC CHẮN MUỐN XÓA SẢN PHẨM NÀY?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                TÊN SẢN PHẨM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NamePro)
            </dd>
            <dt>
                MÔ TẢ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DecriptionPro)
            </dd>
            <dt>
                GIÁ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price) VNĐ
            </dd>
            <dt>
                HÌNH ẢNH
            </dt>
            <dd>
                <img src="@Url.Content(Model.ImagePro)" height="100" />
            </dd>
            <dt>
                NHÓM SẢN PHẨM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category1.NameCate)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xóa" class="btn btn-outline-dark" /> |
                    <div class="btn btn-outline-dark">
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

