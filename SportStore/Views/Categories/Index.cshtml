@model IEnumerable<SportStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN CATEGORIES</h2>
    <table class="table">
        <tr>
            <th>
                MÃ CATEGORY
            </th>
            <th>
                TÊN CATEGORY
            </th>
            <th>
                LỆNH
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Cập nhật", "Edit", new { id = item.IDCate }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
