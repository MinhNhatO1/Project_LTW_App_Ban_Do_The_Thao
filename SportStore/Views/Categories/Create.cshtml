@model SportStore.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">TẠO MỚI CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                MÃ CATEGORY
                <div class="col-md-12">
                    @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control" }})
                    @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                TÊN CATEGORY
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" }})
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12 mb-3 mt-3">
                    <input type="submit" value="Tạo mới" class="btn btn-outline-dark" style="float: right"/>
                </div>
            </div>
        </div>
    }
</div>
