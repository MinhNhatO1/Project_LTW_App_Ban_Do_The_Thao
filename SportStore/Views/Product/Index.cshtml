@model IEnumerable<SportStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h1 style="text-align: center; margin-top:20px">DANH MỤC SẢN PHẨM</h1>
<br />
<table class="table table-bordered" style="border-width:thick">
    <tr>
        <th> Tên Sản phẩm </th>
        <th> Mô tả </th>
        <th> Đơn giá (VNĐ)</th>
        <th> Số lượng </th>
        <th> Hình </th>
        <th> Loại Sản phẩm </th>
        <th>Lệnh</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 200px"> @Html.DisplayFor(modelItem => item.NamePro)</td>
            <td style="width: 250px"> @Html.DisplayFor(modelItem => item.DecriptionPro) </td>
            <td> @Html.DisplayFor(modelItem => item.Price)</td>
            <td> @Html.DisplayFor(modelItem => item.Quantity) </td>
            <td>
                <img src="@Url.Content(item.ImagePro)" width="100" height="100" />
            </td>
            <td> @Html.DisplayFor(modelItem => item.Category1.NameCate) </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.ProductID }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>


